<Window x:Class="Passwd.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Passwd"
        mc:Ignorable="d"
        Title="PopupWindow" 
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Height="250" Width="300">
    <Grid x:Name="NotificationOverlay" IsHitTestVisible="False" PreviewMouseLeftButtonUp="Grid_PreviewMouseLeftButtonUp" >
        <Border Background="#706884"
                CornerRadius="5"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <TextBlock x:Name="NotificationLabel" 
                        Text="Test notification message!"
                        Padding="20 10"
                        Foreground="White"
                        TextWrapping="Wrap"
                        MaxHeight="250"
                        MaxWidth="300"/>
        </Border>
    </Grid>
</Window>
